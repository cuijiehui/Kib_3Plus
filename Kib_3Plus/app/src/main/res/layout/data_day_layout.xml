<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/data_day_left_iv"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:src="@mipmap/data_last"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/data_day_date_tv"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="48px"
        android:textStyle="bold"
        android:textColor="@color/colorViolet"
        android:text="Today"/>
    <ImageView
        android:id="@+id/data_day_right_iv"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:src="@mipmap/date_next"
        android:paddingRight="20dp"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <com.example.administrator.kib_3plus.ui.RevolveCircleView
           android:id="@+id/data_day_data_rcv"
           android:layout_width="250dp"
           android:layout_height="250dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="15dp"
           />

        <LinearLayout
            android:id="@+id/data_day_activity_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="20dp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/data_steps"
                />
            <CheckBox
                android:id="@+id/data_day_activity_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/data_day_bt_seletor"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/data_day_cal_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="20dp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/data_cal"
                />

            <CheckBox
                android:id="@+id/data_day_cal_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/data_day_bt_seletor"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="06:00AM"
                android:textSize="25px"
                android:textStyle="bold"

                android:textColor="@color/colorViolet"
                android:gravity="right"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="12:00"
                android:textSize="25px"
                android:textStyle="bold"

                android:textColor="@color/colorViolet"

                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="06:00PM"
                android:textSize="25px"
                android:textStyle="bold"

                android:textColor="@color/colorViolet"
                android:gravity="left"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
