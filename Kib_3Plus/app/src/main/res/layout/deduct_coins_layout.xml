<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:src="@mipmap/deduct_goins"
    android:scaleType="centerInside"
    android:layout_marginTop="30dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/deduct_coins_1_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" -1"
            android:textSize="58px"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:drawableLeft="@mipmap/give_coins"
            />
        <TextView
            android:id="@+id/deduct_coins_2_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" -2"
            android:textSize="58px"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:drawableLeft="@mipmap/give_coins"
            />
        <TextView
            android:id="@+id/deduct_coins_3_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" -3"
            android:textSize="58px"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:drawableLeft="@mipmap/give_coins"
            />
    </LinearLayout>
    <Button
        android:id="@+id/deduct_coins_custom_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/custom_text_btn"
        android:textSize="48px"
        android:textColor="@color/colorText"
        android:background="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/deduct_coins_confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/confirm_text_btn"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_black_bg_shape"
        android:textSize="48px"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
</LinearLayout>
