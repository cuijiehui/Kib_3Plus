<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:padding="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/main_member_bg_shape"
    android:orientation="vertical">
    <TextView
        android:id="@+id/rewards_list_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allowance"
        android:textColor="@color/colorBlack"
        android:textSize="48px"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/rewards_list_icon_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/allowance_icon"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/rewards_list_gold_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1"
        android:drawableLeft="@mipmap/member_particular_gold"
        android:textColor="@color/colorBlack"
        android:textSize="48px"
        android:layout_gravity="center"

        />
    <Button
        android:id="@+id/rewards_list_redeem_bt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Redeem"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="28px"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_green_bg_shape"/>
</LinearLayout>


</LinearLayout>
