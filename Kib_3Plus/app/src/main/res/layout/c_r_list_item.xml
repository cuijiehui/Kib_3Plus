<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.kib_3plus.ui.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:id="@+id/c_r_item_mian_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/c_r_item_text_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#DD000000"
                    android:text="Brush Teeth"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />
             <LinearLayout
                 android:id="@+id/c_r_item_data_ll"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:visibility="gone">
                 <TextView
                     android:id="@+id/c_r_item_gold_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text=" x1"
                     android:drawableLeft="@mipmap/member_particular_gold"
                     android:textSize="16dp"/>
                 <TextView
                     android:id="@+id/c_r_item_date_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="9dp"
                     android:text="Week: Men Sat"
                     android:textSize="16dp"/>
             </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/c_r_item_text_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/choice_box"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/c_r_item_delete_iv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_content"
            android:src="@mipmap/dustbin"
            android:padding="10dp"
            android:textColor="#DDFFFFFF"/>
    </RelativeLayout>
</com.example.administrator.kib_3plus.ui.SlidingButtonView>
