<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/delete_dialog_bg_shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/name_del_rl"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/chore_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chores_brush_teeth_name"
                android:textSize="48px"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/chore_delete_bt"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="35px"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_red_bg_shape"/>
        </RelativeLayout>
       <LinearLayout
           android:id="@+id/chores_data_ll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@+id/name_del_rl"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Frequency:"
               android:textSize="40px"
               android:textStyle="bold"
               android:textColor="@color/colorTWhite"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               android:gravity="center_horizontal"
               android:orientation="horizontal"
               >

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_su_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_su_tv"
                       android:textOn="@string/inactivity_alert_su_tv"
                       android:textSize="38px"
                       />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_m_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_m_tv"
                       android:textOn="@string/inactivity_alert_m_tv"
                       android:textSize="38px"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_tu_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_tu_tv"
                       android:textOn="@string/inactivity_alert_tu_tv"
                       android:textSize="38px"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_w_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_w_tv"
                       android:textOn="@string/inactivity_alert_w_tv"
                       android:gravity="center"
                       android:textSize="38px"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_th_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_th_tv"
                       android:textOn="@string/inactivity_alert_th_tv"
                       android:textSize="38px"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_f_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_f_tv"
                       android:textOn="@string/inactivity_alert_f_tv"
                       android:textColor="@color/colorBlack"
                       android:textSize="38px"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <ToggleButton
                       android:id="@+id/chores_alert_sa_tb"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/alert_week_selector"
                       android:textOff="@string/inactivity_alert_sa_tv"
                       android:textOn="@string/inactivity_alert_sa_tv"
                       android:textColor="@color/colorBlack"
                       android:textSize="38px"/>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/chore_reward_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chores_data_ll"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chore Reward:"
                android:textSize="40px"
                android:textColor="@color/colorTWhite"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/chores_custom_gold_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:visibility="gone"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/chore_add_gold_1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +1"
                    android:textColor="@color/colorWhite"
                    android:padding="8dp"
                    android:textSize="38px"
                    android:drawableLeft="@mipmap/member_particular_gold"/>
                <TextView
                    android:id="@+id/chore_add_gold_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +3"
                    android:textColor="@color/colorWhite"
                    android:textSize="38px"
                    android:padding="8dp"

                    android:layout_toRightOf="@+id/chore_add_gold_1_tv"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/member_particular_gold"/>
                <TextView
                    android:id="@+id/chore_add_gold_5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +5"
                    android:padding="8dp"

                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@+id/chore_add_gold_3_tv"
                    android:textSize="38px"
                    android:drawableLeft="@mipmap/member_particular_gold"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/chore_custom_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Custom"
                    android:textColor="@color/colorWhite"
                    android:textSize="38px"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chore_reward_ll"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp">
            <Button
                android:id="@+id/chores_dialog_cancel_bt"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/cancel_text_btn"
                android:textSize="48px"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_red_bg_shape"

                />
            <Button
                android:id="@+id/chores_dialog_confirm_bt"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="@string/confirm_text_btn"
                android:textSize="48px"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_green_bg_shape"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
