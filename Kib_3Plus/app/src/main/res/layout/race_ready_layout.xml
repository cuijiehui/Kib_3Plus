<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/race_ready_top_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/mount_roraima_icon"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/race_ready_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race_text_step_hint"
            android:textSize="38px"
            android:gravity="center"
            android:layout_below="@+id/race_ready_top_iv"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/race_ready_another_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/race_ready_hint_tv">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/race_ready_add_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/race_ready_another_rv">
                <ImageView
                    android:id="@+id/race_add_icon_iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/race_ready_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add another runner!"
                    android:textSize="38px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/race_add_icon_iv"/>
        </RelativeLayout>
        <Button
            android:id="@+id/race_ready_go_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/race_ready_add_rl"
            android:text="On your mark.. Get set.. GO!"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_green_bg_shape"
            android:textSize="38px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"/>
</RelativeLayout>
